# Environment
NODE_ENV=development
PORT=3000

# PostgreSQL Database
DATABASE_URL=postgresql://pos_user:pos_password@localhost:5432/pos_db

# MongoDB (for logs only)
MONGODB_URL=mongodb://localhost:27017/pos_logs

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Queue Provider (bullmq or sqs)
QUEUE_PROVIDER=bullmq

# JWT
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# Firebase Storage (optional)
FIREBASE_STORAGE_BUCKET=

# SMTP Email Configuration (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@pos.com

# AWS (for production SQS - optional)
AWS_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
