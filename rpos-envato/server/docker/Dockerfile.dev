FROM node:18-alpine

WORKDIR /app

# Install dependencies for native modules
RUN apk add --no-cache python3 make g++

# Copy package files
COPY package*.json ./

# Install all dependencies
RUN npm install

# Don't copy source - will be mounted as volume
EXPOSE 3000 9229

# Run with ts-node-dev for hot reload
CMD ["npm", "run", "dev"]
